<h1>Doctors Info</h1>

<a href="/tasks/add"> Add a New Doctor info</a>
<table class="table table-striped table-hover">
    <tr>
        <th>Doctor Name</th>
        <th>Specialties in</th>
        <th>Gender</th>
        <th>Availability</th>
        <th>Priority</th>
        <th>Actions</th>
    </tr>

    {{#each tasks}}
<tr>
    <td> {{this.name}} </td>
    <td> {{this.specialties}} </td>
    <td> {{this.gender}} </td>
    <td> {{this.available}} </td>
    <td> {{this.priority}} </td>
    <td>
        <!--this._id is the MongoDB primary key for each specific task -->
        <a href="/tasks/edit/{{ this._id }}"> Edit </a>|
        <a href="/tasks/delete/{{ this._id }}" class="text-danger delete"> Delete </a>
    </td>
</tr>

    {{/each}}

</table>
